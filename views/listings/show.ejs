<% layout("/layouts/boilerplate.ejs") %>
    <div class="row">
        <div class="col-8 offset-3 mt-3">
            <h3>Listing detail:</h3>
        </div>
        <div class="card col-6 offset-3 show-card">
            <img src="<%= listings.image %>" class="card-img-top" alt="listing image">

            <div class="card-body">
                <p class="card-text">
                    <b>
                        <%=listings.title%>
                    </b><br>
                    <%=listings.description%><br>
                        &#8377;<%=listings.price.toLocaleString("en-IN")%><br>
                            <%=listings.location%><br>
                                <%=listings.country%><br>
                </p>
            </div>



        </div>
    </div>

    <div class="btns">
        <a href="/listings/<%= listings._id%>/edit" class="btn btn-dark add-btn col-1 offset-3" >edit</a><br><br>
        <form method="POST" action="/listings/<%=listings._id%>?_method=DELETE">
            <button class="btn btn-dark offset-5">Delete</button>
        </form>
    </div>